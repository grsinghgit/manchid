<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:id="@+id/main"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ================= REGISTRATION FORM ================= -->
        <LinearLayout
            android:id="@+id/layoutRegistrationForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/cardRegistration"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                android:layout_marginBottom="12dp">

                <!-- IMPORTANT: padding INSIDE card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- TITLE -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Organizer Registration"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:gravity="center"
                        android:paddingBottom="16dp" />

                    <!-- Institution / Event Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        android:hint="Institution / Event / Program Name">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"/>


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etInstitutionName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Organizer Name -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundMode="outline"
                        android:hint="Organizer / Host Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOrganizerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Contact -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:boxBackgroundMode="outline"
                        android:hint="Contact / Address">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="2" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- CATEGORY -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category (Select One)"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginTop="16dp" />

                    <RadioGroup
                        android:id="@+id/rgCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:text="Education Institute" />

                        <RadioButton
                            android:text="Cricket Tournament" />

                        <RadioButton
                            android:text="Mahotsav / Stage Program" />

                        <RadioButton
                            android:text="Artist / Influencer" />

                        <RadioButton
                            android:text="Other Program" />
                    </RadioGroup>

                    <!-- DECLARATION -->
                    <CheckBox
                        android:id="@+id/cbDeclaration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="#444444"
                        android:text="I declare that all displayed content is my responsibility. I confirm that I have read and agree to follow the appâ€™s Terms &amp; Conditions." />

                    <!-- SUBMIT -->
                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Register as Host"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#3949AB"
                        android:layout_marginTop="16dp"
                        android:enabled="false"
                        android:alpha="0.5" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- ================= MYMANCH ID ================= -->
        <TextView
            android:id="@+id/tvMyManchId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MYMANCH ID: 12345678"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <!-- ================= DASHBOARD BUTTONS ================= -->
        <Button
            android:id="@+id/btnManageDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Your Dashboard"
            android:backgroundTint="#00897B"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Details"
            android:backgroundTint="#F9A825"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Organizer"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
